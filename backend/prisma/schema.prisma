datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int          @id @default(autoincrement())
  username    String       @unique
  email       String       @unique
  githubId    String? // GitHub user ID
  accessToken String? // OAuth token
  repos       Repository[]
}

model Repository {
  id                  Int     @id @default(autoincrement())
  name                String
  githubOwnerUsername String? // new field for actual GitHub owner
  ownerId             Int
  owner               User    @relation(fields: [ownerId], references: [id])

  commits      Commit[]
  pullRequests PullRequest[] // ‚Üê Add this line
}

model Commit {
  id           Int        @id @default(autoincrement())
  sha          String?    @unique // üëà make optional
  message      String
  author       String?
  date         DateTime   @default(now())
  repository   Repository @relation(fields: [repositoryId], references: [id])
  repositoryId Int
}

model PullRequest {
  id           Int        @id @default(autoincrement())
  title        String
  status       String
  repository   Repository @relation(fields: [repositoryId], references: [id])
  repositoryId Int
}
